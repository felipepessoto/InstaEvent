@model Instaeventos.Web.ViewModels.EventConfigureSave

@using (Html.BeginForm("Configure", "Event", FormMethod.Post, new { @class = "form-horizontal" }))
{
        <legend>Configurar Evento</legend>
        <div class="form-group">
            <label class="col-lg-2 control-label">Nome</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(x => x.Name, new { placeholder = "Nome do Evento",  @class="form-control", required=""})
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">HashTag</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(x => x.HashTag, new { placeholder = "HashTag", @class = "form-control", required = "" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(x => x.AutomaticApproval) Aprovação Automática
                    </label>
                </div>
            </div>
        </div>
    <input class="col-lg-offset-2 btn btn-default" type="submit" value="Salvar">

}
